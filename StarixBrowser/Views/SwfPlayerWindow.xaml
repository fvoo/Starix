<Window x:Class="StarixBrowser.Views.SwfPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:flash="clr-namespace:StarixBrowser.FlashBrowser;assembly=StarixBrowser.FlashBrowser"
        xmlns:local="clr-namespace:StarixBrowser.Views"
        mc:Ignorable="d"
        
        x:Name="window"
        Title="{Binding ElementName=browser, Path=Title, TargetNullValue=SwfPlayer}"
        Width="Auto"
        Height="Auto"
        MinWidth="400"
        MinHeight="300"
        Closing="WindowClosing">

    <flash:ChromiumFlashBrowser x:Name="browser"/>
</Window>
